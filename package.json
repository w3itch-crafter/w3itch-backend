{
  "name": "w3itch-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "yarn prebuild && nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:prof": "nest start -e 'node --prof'",
    "start:dev": "nest start --watch",
    "start:dev:prof": "nest start --watch -e 'node --prof'",
    "start:debug": "nest start --debug --watch",
    "start:debug:prof": "nest start --debug --watch -e 'node --prof'",
    "start:prod": "NODE_ENV='production' node dist/main",
    "start:prod:prof": "NODE_ENV='production' node --prof dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "DB_MIGRATION='true' node --require ts-node/register ./node_modules/typeorm/cli.js --config src/configs/ormconfig.ts",
    "typeorm:prod": "NODE_ENV='production' DB_MIGRATION='true'  node --require ts-node/register ./node_modules/typeorm/cli.js --config src/configs/ormconfig.ts",
    "keygen": "openssl genrsa -out config/JWT_PRIVATE_KEY.pem 1024 && openssl rsa -in config/JWT_PRIVATE_KEY.pem -pubout > config/JWT_PUBLIC_KEY.pub",
    "prepare": "husky install",
    "repl": "ts-node repl/repl.ts"
  },
  "dependencies": {
    "@fleekhq/fleek-storage-js": "^1.0.21",
    "@nestjs/axios": "^0.0.7",
    "@nestjs/bull": "^0.5.3",
    "@nestjs/common": "^8.4.0",
    "@nestjs/config": "^1.2.0",
    "@nestjs/core": "^8.4.0",
    "@nestjs/event-emitter": "^1.1.0",
    "@nestjs/jwt": "^8.0.0",
    "@nestjs/microservices": "^8.4.0",
    "@nestjs/passport": "^8.2.1",
    "@nestjs/platform-express": "^8.4.0",
    "@nestjs/schedule": "^1.0.2",
    "@nestjs/swagger": "^5.2.0",
    "@nestjs/typeorm": "^8.0.3",
    "adm-zip-iconv": "^0.4.9",
    "bull": "^4.7.0",
    "cache-manager": "^3.6.0",
    "cache-manager-ioredis": "^2.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "cookie": "^0.4.2",
    "cookie-parser": "^1.4.6",
    "eth-sig-util": "^3.0.1",
    "execa": "^5.1.1",
    "find-remove": "^4.0.4",
    "form-cors": "^1.0.2",
    "han": "^0.0.7",
    "mime-types": "^2.1.35",
    "mysql2": "^2.3.3",
    "nest-winston": "^1.6.2",
    "nestjs-paginate": "^2.5.4",
    "passport": "^0.5.2",
    "passport-jwt": "^4.0.0",
    "randomstring": "^1.2.2",
    "rxjs": "^7.5.5",
    "swagger-ui-express": "^4.3.0",
    "typeorm": "^0.2.45",
    "winston": "^3.6.0",
    "winston-loki": "^6.0.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@nestjs/cli": "^8.2.2",
    "@nestjs/schematics": "^8.0.8",
    "@nestjs/testing": "^8.4.0",
    "@types/adm-zip": "^0.4.34",
    "@types/bull": "^3.15.8",
    "@types/cache-manager": "^3.4.3",
    "@types/cache-manager-ioredis": "^2.0.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/cron": "^1.7.3",
    "@types/express": "^4.17.13",
    "@types/find-remove": "^2.0.1",
    "@types/jest": "^27.4.1",
    "@types/js-yaml": "^4.0.5",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/lodash.omit": "^4.5.6",
    "@types/mime-types": "^2.1.1",
    "@types/multer": "^1.4.7",
    "@types/node": "^16.11.26",
    "@types/passport-jwt": "^3.0.6",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "js-yaml": "^4.1.0",
    "lint-staged": "^12.3.5",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "sqlite3": "^5.0.2",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.3",
    "ts-loader": "^9.2.8",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^3.14.0",
    "typescript": "^4.6.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix"
  },
  "engines": {
    "node": ">=14 <=17"
  },
  "packageManager": "yarn@3.2.0"
}
